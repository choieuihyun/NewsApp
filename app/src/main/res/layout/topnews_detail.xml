<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="topNewsDetail"
            type="com.campusmap.android.wanted_preonboarding_android.news.TopNewsDetail" />

    </data>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/topNewsDetail_title"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="12dp"
            android:drawableEnd="@drawable/star_empty"
            android:text="title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/topNewsDetail_author"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:paddingStart="12dp"
            android:text="author" />

            <TextView
                android:id="@+id/topNewsDetail_publishedAt"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="publishedAt"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/topNewsDetail_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/topnews_radius"
            android:backgroundTint="@color/purple_700"
            android:padding="15dp" />

        <TextView
            android:id="@+id/topNewsDetail_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="content"/>

    </LinearLayout>

</LinearLayout>

</layout>